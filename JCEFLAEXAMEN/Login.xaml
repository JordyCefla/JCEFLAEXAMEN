<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JCEFLAEXAMEN.Login">
    <ContentPage.Content>
        <StackLayout>

            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
               
                  

                </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
               
                    
                    



                </Grid.ColumnDefinitions>

                <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"  Grid.Row="0" Grid.Column="0" />
                <Label Text="Bienvenido"  FontSize="30"  Grid.Row="1" Grid.Column="1"/>
                <Label Text="Nombre"  FontSize="20"  Grid.Row="2" Grid.Column="0"/>
                <Entry x:Name="txtNombre"  Placeholder="Ingrese su usuario"  Grid.Row="2" Grid.Column="1" />
                <Label Text="Password"  FontSize="20"   Grid.Row="3" Grid.Column="0"/>
                <Entry x:Name="txtPass"  Placeholder="Ingrese su password" Grid.Row="3" Grid.Column="1" IsPassword="True" />

                <Button x:Name="btnAbrir" Text=" Ingresar" Clicked="btnAbrir_Clicked"  Grid.Row="4" Grid.Column="0"/>
            
            
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>